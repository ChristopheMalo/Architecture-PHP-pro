{% extends "layout.html.twig" %}

{% block title %}{{ article.title }}{% endblock %}

{% block content %}
<article>
    <h1>{{ article.title }}</h1>
    <p>{{ article.content }}</p>
    <h2>Comments</h2>
    {% for comment in comments %}
        <p><strong>{{ comment.author }}</strong> a dit : {{ comment.content }}</p>
    {% else %}
        <p>Pas encore de commentaire</p>
    {% endfor %}
</article>
{% endblock %}