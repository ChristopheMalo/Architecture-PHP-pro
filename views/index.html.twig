{% extends "layout.html.twig" %}

{% block title %}Page d'accueil{% endblock %}

{% block content %}
{% for article in articles %}
<article>
    <h1><a class="articleTitle" href="{{ path('article', {'id': article.id}) }}">{{ article.title }}</a></h1>
    <p>{{ article.content }}</p>
</article>
{% endfor %}
{% endblock %}